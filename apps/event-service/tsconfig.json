{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    // "rootDir": "./src",           ‚Üê REMOVE or set to "."
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@shared/types": ["../../packages/shared/index.ts"],
      "@shared/*": ["../../packages/shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts"          // keep this for your ws.d.ts
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}